
<p id="notice"><%= notice %></p>
<h1><%= @artiszoo.department %></h1>
<h2>List of Animals</h2>
<% if @artiszoo.animals.any? %>
  <ul>
    <% @animals.each do |animal| %>
      <li><%= link_to animal.name, animal_path(animal.id) %></li>
    <% end %>
  </ul>
<%else%>
  <p>There are n animals in this artiszoo. </p>
<%end%>
